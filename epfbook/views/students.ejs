<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <script src="/students.js"></script>
    <style>
        .return-home-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .return-home-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>See Details</th>
                    <th>Update Student</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(function(student) { %>
                <tr>
                    <td><%= student.name %></td>
                    <td><a href="/students/<%= student.id %>" class="btn btn-primary" style="background-color:darkblue">Details</a></td>
                    <td>
                        <button type="button" class="btn btn-primary update-btn" data-student-id="<%= student.id %>" data-student-school="<%= student.school %>" style="background-color:darkgoldenrod">Update</button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Update Student Form -->
    <div id="update-form-modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="color:black">Update Student</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="update-form" method="POST">
                        <input type="hidden" id="student-id-input" name="id" value="">
                        <div class="form-group">
                            <label for="name-input" style="color:black">Name</label>
                            <input type="text" class="form-control" id="name-input" name="name" value="">
                        </div>
                        <div class="form-group">
                            <label for="school-input" style="color:black">School</label>
                            <input type="text" class="form-control" id="school-input" name="school" value="">
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <a href="/" class="return-home-btn">
        <span>Return Home</span>
    </a>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>